# EditorConfig is awesome: https://EditorConfig.org

root = true  # A search for .editorconfig files will stop if the root filepath is reached or an EditorConfig file with root=true is found.

# Unix-style newlines with a newline ending every file
[*]
end_of_line = crlf # set to lf, cr, or crlf to control how line breaks are represented.
insert_final_newline = true # set to true to ensure file ends with a newline
trim_trailing_whitespace = true # set to true to remove any whitespace characters preceding newline characters and false to ensure it doesn't.
# max_line_length = 88
charset = utf-8
indent_size = 4
indent_style = space

[*.{puml, nsi, nsh}]
indent_style = tab

[*.{yml, yaml, json, js, css, html}]
indent_size = 2

